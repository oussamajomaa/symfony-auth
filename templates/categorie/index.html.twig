{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="container">
    <h1>Table de Cat√©gorie</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NOM</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td class="d-flex justify-content-between">
                    <a class="btn btn-success mr-1" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-success" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('categorie_new') }}"><i class="fas fa-plus-square"></i></a>
</div>
{% endblock %}
